{
    "name": "rcrowe/twigbridge",
    "description": "Adds the power of Twig to Illuminate / Laravel 4",
    "keywords": ["laravel", "twig"],
    "license": "MIT",
    "authors": [
        {
            "name": "Rob Crowe",
            "email": "hello@vivalacrowe.com"
        }
    ],
    "require": {
        "php": ">=5.3.0",
        "twig/twig": "1.12.*@stable",
        "illuminate/foundation": "4.0.*"
    },
    "require-dev": {
        "mockery/mockery": "0.7.2",
        "meido/html": "1.1.*@stable",
        "meido/form": "1.1.*@stable"
    },
    "suggest": {
        "meido/html": "A port of Laravel 3's HTML class",
        "meido/form": "A port of Laravel 3's Form class"
    },
    "autoload": {
        "psr-0": {
            "TwigBridge": "src/"
        }
    },
    "minimum-stability": "dev"
}
